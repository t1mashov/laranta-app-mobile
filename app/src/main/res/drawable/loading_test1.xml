<?xml version="1.0" encoding="utf-8"?>
<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="76dp"
    android:height="76dp"
    android:viewportWidth="76"
    android:viewportHeight="76">

    <aapt:attr name="android:drawable">
        <vector
            android:width="8dp"
            android:height="8dp"
            android:viewportWidth="168"
            android:viewportHeight="132">
            <path android:name="anim_path"
                android:fillColor="#00000000"
                android:strokeWidth="8"
                android:strokeLineCap="round"
                android:strokeLineJoin="round"
                android:strokeColor="#000"
                android:trimPathOffset="0.2"
                android:pathData="
M 12,122
L 151.5,122
C 139.5,88.5 141.5,62.5 145.5,31.5
C 146.5,23.5 142,24 139,25
C 145,16 135,12 129,19
C 121,18 121.5,11.5 118.5,11
C 111,28.5 137.5,71.5 43,61
C 50.5,26.5 11,36 30,72.5
C 28,89.5 21,113 12,122
Z
"
                />
        </vector>
    </aapt:attr>

    <target
        android:name="anim_path">
        <aapt:attr name="android:animation">
            <set android:ordering="together">
                <objectAnimator
                    android:repeatCount="infinite"
                    android:repeatMode="restart"
                    android:duration="1000"
                    android:propertyName="trimPathStart"
                    android:valueFrom="0"
                    android:valueTo="1"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/linear"
                    />
                <objectAnimator
                    android:repeatCount="infinite"
                    android:repeatMode="restart"
                    android:duration="1000"
                    android:propertyName="trimPathEnd"
                    android:valueFrom="0.3"
                    android:valueTo="1.3"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/linear"
                    />
            </set>

        </aapt:attr>
    </target>

</animated-vector>
